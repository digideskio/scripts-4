#!/bin/bash

dir=$(dirname "$0")
source $dir/funcs
PATH=$(readlink -f $dir):$PATH

(
rm -f myapp
)&>/dev/null

set -e

doit --ignorerc cd $HOME/myapp
cd $HOME/myapp
doit cat Makefile

doit --ignorerc make

rm -f myapp
doit make -f .Makefile

background sudo ./myapp

sleep 1
echo

doit curl --silent localhost:80
doit --ignorerc curl --silent localhost:80/stop

doit ls -l
rm -f myapp
doit make -f .Makefile1
doit ls -l

doit --ignorerc which git
doit command -V git
